{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build:app": {
			"dependsOn": ["^build:app"]
		},
		"build:web": {
			"dependsOn": ["^build:web"],
			"cache": false
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"dev:app": {
			"dependsOn": ["^dev:app"],
			"cache": false
		},
		"dev:web": {
			"dependsOn": ["^dev:web"],
			"cache": false
		},
		"preview:web": {
			"dependsOn": ["^preview:web"]
		}
	},
	"globalDependencies": ["$DATABASE_URL"]
}
