{
	"name": "japtools",
	"version": "0.1.0",
	"scripts": {
		"dev": "esrun scripts/run.ts && vite dev",
		"build": "vite build",
		"build:static": "cross-env ADAPTER=static npm run build",
		"build:node": "cross-env ADAPTER=node npm run build",
		"build:cloudflare": "prisma generate && cross-env ADAPTER=cloudflare npm run build",
		"package": "svelte-kit package",
		"preview": "esrun scripts/run.ts && vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"dosetup": "esrun scripts/setup.ts",
		"generate": "prisma generate",
		"migration": "prisma migrate dev --name",
		"dev:app": "tauri dev",
		"build:app": "tauri build"
	},
	"devDependencies": {
		"@digitak/esrun": "^3.2.11",
		"@prisma/client": "^4.3.1",
		"@sveltejs/adapter-cloudflare": "1.0.0-next.34",
		"@sveltejs/adapter-node": "1.0.0-next.92",
		"@sveltejs/adapter-static": "1.0.0-next.43",
		"@sveltejs/kit": "1.0.0-next.480",
		"@tauri-apps/cli": "^1.1.0",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"autoprefixer": "^10.4.7",
		"bcrypt": "^5.0.1",
		"cookie": "^0.5.0",
		"cross-env": "^7.0.3",
		"cuid": "^2.1.8",
		"dotenv": "^16.0.2",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"functional-utilities": "^1.17.0",
		"node-sass": "^7.0.3",
		"pkg-up": "^4.0.0",
		"postcss": "^8.4.14",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"prisma": "^4.3.1",
		"prisma-zod-generator": "^0.5.3",
		"sass": "^1.54.9",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.0",
		"svelte-preprocess": "^4.10.7",
		"ts-to-zod": "^1.13.1",
		"tslib": "^2.4.0",
		"type-fest": "^2.19.0",
		"typescript": "^4.8.3",
		"vite": "3.1.0"
	},
	"type": "module",
	"dependencies": {
		"@keyfox/pochi": "^0.5.6",
		"@types/js-cookie": "^3.0.2",
		"@types/js-levenshtein": "^1.1.1",
		"@types/lodash-es": "^4.17.6",
		"@types/number-to-words": "^1.2.1",
		"@types/serialize-javascript": "^5.0.2",
		"@types/wanakana": "^4.0.3",
		"@zerodevx/svelte-toast": "^0.7.2",
		"array-shuffle": "^3.0.0",
		"daisyui": "^2.25.0",
		"js-cookie": "^3.0.1",
		"js-levenshtein": "^1.1.6",
		"lodash-es": "^4.17.21",
