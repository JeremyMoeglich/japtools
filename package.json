{
	"name": "japtools",
	"version": "0.0.1",
	"scripts": {
		"dev": "esrun scripts/run.ts && vite dev",
		"build": "esrun scripts/build_src.ts && vite build",
		"package": "esrun scripts/build_src.ts && svelte-kit package",
		"preview": "esrun scripts/run.ts && vite preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"postinstall": "esrun scripts/setup.ts"
	},
	"devDependencies": {
		"@prisma/client": "^4.1.1",
		"@sveltejs/adapter-auto": "1.0.0-next.63",
		"@sveltejs/kit": "1.0.0-next.392",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"bcrypt": "^5.0.1",
		"cookie": "^0.5.0",
		"cuid": "^2.1.8",
		"dotenv": "^16.0.1",
		"eslint": "^8.21.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"functional-utilities": "^1.15.1",
		"node-sass": "^7.0.1",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"sass": "^1.54.0",
		"svelte": "^3.49.0",
		"svelte-check": "^2.8.0",
		"svelte-preprocess": "^4.10.7",
		"ts-to-zod": "^1.12.0",
		"tslib": "^2.4.0",
		"type-fest": "^2.18.0",
		"typescript": "^4.7.4",
		"vite": "^3.0.4"
	},
	"type": "module",
	"dependencies": {
		"@digitak/esrun": "^3.2.9",
		"@macfja/svelte-persistent-store": "1.2.0",
		"@types/js-cookie": "^3.0.2",
		"generate-password": "^1.7.0",
		"js-cookie": "^3.0.1",
		"pkg-up": "^4.0.0",
		"zod": "^3.17.10"
	}
}
