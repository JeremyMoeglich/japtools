{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"include": ["./**/*.js", "./**/*.ts", "./**/*.svelte"],
	"exclude": ["./node_modules/**", "packages/db/scripts/project-setup-rs/**", "./target/**"]
}
